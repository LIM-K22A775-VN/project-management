extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(500)

  .container.my-5
    .row.justify-content-center
      .col-md-8.col-lg-6
        h1.text-center.mb-4 Nhập otp xác thực

        form(action="/user/password/otp", method="POST")
          .mb-3
            label.form-label(for="email") Email
            input#email.form-control(type="email", name="email",value = email  ,readonly    )

          .mb-3
            label.form-label(for="otp") Mã otp
            input#otp.form-control(type="text", name="otp", required)

          button.btn.btn-primary.w-100(type="submit") Xác nhận