extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(500)

  .container.my-5
    .row.justify-content-center
      .col-md-8.col-lg-6
        h1.text-center.mb-4 Đổi mật khẩu

        form(action="/user/password/reset", method="POST")
          .mb-3
            label.form-label(for="password") Mật khẩu
            input#password.form-control(type="password", name="password", required)
          .mb-3
            label.form-label(for="confirmPassword") Xác nhận mật khẩu
            input#confirmPassword.form-control(type="password", name="confirmPassword", required)

          button.btn.btn-primary.w-100(type="submit") Đổi mật khẩu
