
extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main
    if (role.permissions.includes("account_create"))
      +alert-success("5000")
      +alert-error("5000")
      h1(class="mb-4") Cập nhật thông tin cá nhân
      form(
          action=`${prefixAdmin}/my-account/edit?_method=PATCH`
          method="POST"
          enctype="multipart/form-data"
      )
          div(class ="form-group")         
            label(for="fullName") Họ tên *
            input(
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
              required
            )
          div(class ="form-group")         
            label(for="email") Email *
            input(
              type="text"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class ="form-group")         
            label(for="password") Mật khẩu *
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class ="form-group")         
            label(for="phone") Số điện thoại 
            input(
              type="password"
              class="form-control"
              id="phone"
              name="phone"
            )
          
          div.form-group.d-flex.gap-2.align-items-start(upload-image)
            label(for="thumbnail") Ảnh đại diện
            input#thumbnail.form-control-file(
              type="file",
              name="avatar",
              accept="image/*",
              style="display:none",
              upload-image-input
            )
            button(type="button", fake-file) Chọn ảnh
          div.preview-wrapper(style="position: relative; display: inline-block;")
            img(
            src="",
            alt="",
            upload-image-preview,
            class="image-preview"
          )
            button(
            type="button",
            upload-image-cancel,
          ) X
          div(class="form-group")
              button(
                  type="submit"
                  class="btn btn-primary"
              ) Cập nhật
    else
      h1 Không có quyền truy cập
