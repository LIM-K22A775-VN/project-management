//- kế thừa 
extends ../../layouts/default.pug 

//- nhúng file 
include ../../mixins/alert.pug

block main
    if (role.permissions.includes("roles_edit"))
      +alert-error(5000)
      h1(class="mb-4") Sửa nhóm quyền

      form(
          action=`${prefixAdmin}/roles/edit/${record.id}?_method=PATCH`
          id="form-edit-role"
          method="POST"
      )
          div(class ="form-group")         
            label(for="title") 
            input(
              type="text"
              class="form-control"
              id="title"
              name="title"
              value = record.title
              required
            )
          div(class ="form-group ")
            label(for="desc")
            textarea(
              class="form-control "
              id="desc"
              name="description"          
              rows="5"
            ) !{record.description}
          div(class="form-group")
              button(
                  type="submit"
                  class="btn btn-primary"
              ) Cập nhật   
    else
      h1 Không có quyền truy cập
