extends ../../layouts/default.pug

include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main
  h1 Trang danh sách sản phẩm
  .dropdown.ml-1
    button.dropdown-btn(type="button" onclick="toggleDropdown(this)") #{name}
    .dropdown-content
      each item in filterStatus
        a(href="#" onclick=`selectOption('${item.status}', event)`) #{item.name}
  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filter-status(filterStatus)
        .col-6 
          +search(keyword)   

  .card.mb-3 
    .card-header Danh sách sản phẩm
    .card-body
      table.table.table-hover.table-sm
        thead
          tr
            th STT
            th Hình Ảnh
            th Tiêu đề
            th Giá
            th Trạng thái
            th Hành động
        tbody
        each item,index in products
          tr
            td #{index + 1  }
            td
              img(src=item.thumbnail alt=item.title width="50" height = "auto")
            td #{item.title}
            td #{item.price}$
            td 
              if(item.status === 'active')
                a(href="#" class="badge bg-success clear") Hoạt động
              else 
                a(href="#" class="badge bg-danger") Dừng Hoạt động
            td 
              button(class="btn btn-warning btn-sm") Sửa
              |  
              button(class="btn btn-danger btn-sm ml-1") Xóa

  nav
  ul.pagination
    li.page-item        
      button(
        class="page-link"
        button-pagination=pagination.currentPage - 1 > 1 ? pagination.currentPage - 1 : 1
      ) Trang trước
      - for (var i = pagination.start; i <= pagination.end; i++)
          li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
            button(
              class="page-link"
              button-pagination=i
            ) #{i}       
    li.page-item
      button(
        class="page-link"
        button-pagination=pagination.currentPage + 1 < pagination.totalPage ?
        pagination.currentPage + 1 :
        pagination.totalPage
      ) Kế tiếp



