extends ../../layouts/default.pug

include ../../mixins/filter-status.pug
include ../../mixins/filter-sort.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/moment.pug
block main
  if (role.permissions.includes("products_view"))  
    +alert-success("5000")
    +alert-error("5000")
    h1 Trang danh sách sản phẩm
    div(class ="dropdown ml-1" dropdown-status)
      button.dropdown-btn.hienthiDrop(type="button") #{name}
      .dropdown-content
        each item in filterStatus
          a(a-status value=`${item.status}` ) #{item.name}
    .card.mb-3
      .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row
          .col-6
            +filter-status(filterStatus)
          .col-6 
            +search(keyword)   

    .card.mb-3 
      .card-header Sắp xếp
      .card-body
        .row
          .col-4 
            +filter-sort(filterSort)



    .card.mb-3 
      .card-header Danh sách sản phẩm
      .card-body
        .row
          .col-8
            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
          .col-4 
            if (role.permissions.includes("products_create"))  
              a(
                href=`${prefixAdmin}/products/create`
                class="btn btn-outline-success"
              ) + Thêm mới
        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
          thead
            tr
              if (role.permissions.includes("products_edit") ||role.permissions.includes("products_delete") )  
                th
                  input(type="checkbox" name="checkall")
              th STT
              th Hình Ảnh
              th Tiêu đề
              th Giá
              th Vị trí
              th Trạng thái
              th Người tạo
              th Người cập nhật
              th Hành động
          tbody
          each item,index in products
            tr
              if (role.permissions.includes("products_edit") ||role.permissions.includes("products_delete") )  
                td
                  input(
                    type="checkbox"
                    name="id"
                    value = item.id
                  )
              td   #{(pagination.currentPage - 1) * pagination.limitItems + index + 1  }
              td
                img(src=item.thumbnail alt=item.title width="50" height = "auto")
              td #{item.title}
              td #{item.price}$
              td 
                input(
                  type="number"
                  value=item.position
                  style="width: 60px"
                  min="1"
                  name="position" 
                )
              if (role.permissions.includes("products_edit"))  
                td 
                  if(item.status === 'active')
                    a(
                      href="javascript:;"
                      data-status = item.status
                      data-id = item._id
                      button-change-status 
                      class="badge bg-success clear"
                    ) Hoạt động
                  else 
                    a(
                      href="javascript:;"
                      data-status = "inactive"
                      data-id = item._id
                      button-change-status  
                      class="badge bg-danger"
                      ) Dừng Hoạt động
              else 
                td 
                  if(item.status === 'active')
                    span(
                      class="badge bg-success clear"
                    ) Hoạt động
                  else 
                    span(  
                      class="badge bg-danger"
                      ) Dừng Hoạt động
              td 
                p #{item.accountFullName  }
                p
                  +formatDateTime(item.createdBy.createdAt)
              td 
                - const updatedBy = item.updatedBy.slice(-1)[0];
                if(updatedBy)
                  p #{updatedBy.accountFullName  }
                  p
                   +formatDateTime(updatedBy.updatedAt)
                  
              td 
                a(
                href=`${prefixAdmin}/products/detail/${item.id}`
                class="btn btn-secondary btn-sm"
                ) Chi tiết
                |  
                if (role.permissions.includes("products_edit"))  
                  a(
                  href=`${prefixAdmin}/products/edit/${item.id}`
                  class="btn btn-warning btn-sm"
                  ) Sửa
                |  
                if (role.permissions.includes("products_delete"))  
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete
                    data-id = item.id
                  ) Xóa

    +pagination(pagination)
    
    form(
      action=""
      method="post"
      id="form-change-status"
      data-path = `${prefixAdmin}/products/change-status`
    ) 
    form(
      action=""
      method="post"
      id="form-delete-item"
      data-path = `${prefixAdmin}/products/delete`
    ) 
    form(
      action=""
      method="get"
      id="form-thungrac"
      data-path = `${prefixAdmin}/products/thungrac`
    ) 

    script(src="/admin/js/product.js") 
  else
    h1 Không có quyền truy cập 
    
