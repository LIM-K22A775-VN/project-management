
extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main
    +alert-success("5000")
    +alert-error("5000")
    h1(class="mb-4") Chỉnh sửa tài khoản
    if roles !=null
        form(
            action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
            id="form-edit-account"  
            method="POST"
            enctype="multipart/form-data"
        )
            div(class ="form-group")         
                label(for="fullName") Họ tên *
                input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                value= data.fullName
                required
                )
            div(class ="form-group")         
                label(for="email") Email *
                input(
                type="text"
                class="form-control"
                id="email"
                name="email"
                value= data.email
                required
                )
            //- div(class="d-none")
            //-     input( name="emailcu" value= data.email )

            div(class ="form-group")         
                label(for="password") Mật khẩu *
                input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                value=""
                )
            div(class ="form-group")         
                label(for="phone") Số điện thoại 
                input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=data.phone
                )
            
            div.form-group.d-flex.gap-2.align-items-start(upload-image)
                label(for="thumbnail") Ảnh đại diện
                input#thumbnail.form-control-file(
                type="file",
                name="avatar",
                accept="image/*",
                style="display:none",

                upload-image-input
                )
                button(type="button", fake-file) Chọn ảnh
            div.preview-wrapper(style="position: relative; display: inline-block;")
                img(
                src=data.avatar ?data.avatar : "" ,
                upload-image-preview,
                class="image-preview"
            )
                button(
                type="button",
                upload-image-cancel,
            ) X
            div(class="form-group")
                label(for="role_id") Phân quyền
                select(name="role_id" id="role_id" class="form-control")
                  option(disabled   ) -- Chọn --
                  each item in roles 
                    option(
                        value=item.id
                        selected=(item.id == data.role_id ? true : false)
                    ) #{item.title}
            div(class ="form-group form-check form-check-inline")
                input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked = (data.status ===  "active")
                )
                label(for="statusActive" class="form-check-label") Hoạt động  
            div(class ="form-group form-check form-check-inline")
                input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                 checked = (data.status ===  "inactive")
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật 
    else
       p Vui lòng tạo nhóm quyền trước khi cập nhật tài khoản
       p
         a(href=`${prefixAdmin}/roles/create` class="btn btn-secondary") Tạo nhóm quyền