extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
  if (role.permissions.includes("accounts_view"))
    h1(class="mb-4") Danh sách tài khoản
    +alert-success("5000")
    +alert-error("5000")  
    .card.mb-3

      .card-header Danh sách
      .card-body
        .row
          .col-8   
          .col-4.text-right
              if (role.permissions.includes("account_create")) 
                a(
                    href =`${prefixAdmin}/accounts/create`
                    class="btn btn-outline-success"
                ) + Thêm mới    
        table(
          class="table table-hover table-sm"
          checkbox-multi
        )
          thead
            tr
              th STT
              th Avatar
              th Họ tên
              th Phân quyền
              th Email
              th Trạng thái
              th Hoạt động
          tbody
          each item,index in records
            tr
              td #{index+1}          
              td
                img(src=item.avatar alt=item.title width="50" height = "auto")
              td #{item.fullName}
              td #{item.role.title }
              td #{item.email}         
              if (role.permissions.includes("account_edit"))    
                td 
                  if(item.status === 'active')
                    a(
                      href="javascript:;"
                      data-status = item.status
                      data-id = item._id
                      button-change-status 
                      class="badge bg-success clear"
                    ) Hoạt động
                  else 
                    a(
                      href="javascript:;"
                      data-status = "inactive"
                      data-id = item._id
                      button-change-status  
                      class="badge bg-danger"
                      ) Dừng Hoạt động
              else
                td 
                  if(item.status === 'active')
                    span( 
                      class="badge bg-success clear"
                    ) Hoạt động
                  else 
                    span(
                      class="badge bg-danger"
                      ) Dừng Hoạt động
              
              td 
                if (role.permissions.includes("accounts_view"))
                  a(
                  href=`${prefixAdmin}/accounts/detail/${item.id}`
                  class="btn btn-secondary btn-sm"
                  ) Chi tiết
                | 
                if (role.permissions.includes("account_edit")) 
                  a(
                  href=`${prefixAdmin}/accounts/edit/${item.id}`
                  class="btn btn-warning btn-sm"
                  ) Sửa
                |
                if (role.permissions.includes("account_delete"))   
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete-role
                    data-id = item.id
                  ) Xóa
  else
    h1 Không có quyền truy cập