extends ../../layouts/default.pug

//- xử lý sau 
block main
   
  h1 Trang danh mục sản phẩm
  .card.mb-3 
    .card-header Danh sách
    .card-body
      .row
        .col-8
        .col-4 
          a(
            href=`${prefixAdmin}/products-category/create`
            class="btn btn-outline-success"
          ) + Thêm mới
      table(
        class="table table-hover table-sm"
        checkbox-multi
      )
        thead
          tr
            th
              input(type="checkbox" name="checkall")
            th STT
            th Hình Ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động
        tbody
        each item,index in records
          tr
            td
              input(
                type="checkbox"
                name="id"
                value = item.id
              )
            td #{index + 1  }
            td
              img(src=item.thumbnail alt=item.title width="50" height = "auto")
            td #{item.title}
            td 
              input(
                type="number"
                value=item.position
                style="width: 60px"
                min="1"
                name="position" 
              )
            td 
              if(item.status === 'active')
                a(
                  href="javascript:;"
                  data-status = item.status
                  data-id = item._id
                  button-change-status-category
                  class="badge bg-success clear"
                 ) Hoạt động
              else 
                a(
                  href="javascript:;"
                  data-status = "inactive"
                  data-id = item._id
                  button-change-status-category  
                  class="badge bg-danger"
                  ) Dừng Hoạt động
            td 
              a(
              href=`${prefixAdmin}/products-category/detail/${item.id}`
              class="btn btn-secondary btn-sm"
              ) Chi tiết
              |  
              a(
              href=`${prefixAdmin}/products-category/edit/${item.id}`
              class="btn btn-warning btn-sm"
              ) Sửa
              |  
              button(
                class="btn btn-danger btn-sm ml-1"
                button-delete-category
                data-id = item.id
              ) Xóa