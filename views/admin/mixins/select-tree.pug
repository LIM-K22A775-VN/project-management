mixin select-tree(records,parent_id = "", level = 1 )
  each item in records
    - const prefix = Array(level).join('-- ')
    option(
      value=item.id
      selected = (item.id == parent_id ? true : false)
    ) #{prefix} #{item.title}
    if item.children && item.children.length
      +select-tree(item.children,parent_id, level + 1)
